<div class="posts">
    {{#each blogs as |blog|}}
<a href="/posts/{{blog.id}}">  
    {{!-- Is this how this works? --}}
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{blog.title}}</strong> <small>Created by {{blog.user.name}}</small>
          <br>
          {{blog.blog_post}}
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a href="/api/posts/{{blog.id}}" class="level-item" aria-label="reply">
            <span class="icon is-small">
              <i class="fas fa-reply" aria-hidden="true"></i>
            </span>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>
</a>  
    {{/each}}


</div>
